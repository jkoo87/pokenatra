<p>Select Pokemon</p>

<form class="containareon" action="/pokemons/view" method="get">
  <select name="id">
    <% @pokemon.each do |pokemon| %>
      <option value="<%= pokemon.id %>"> <%= pokemon.name %> </option>
    <% end %>
  </select>
  <button type="submit">VIEW</button>
  <button type="button" name="button" onclick="window.location.href='/pokemons/new'">Add New Pokemon</button>
</form>
